<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MÃ©tricas (header de Retos) -->
    <style name="MetricNumber">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MetricLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Chips de materias -->
    <style name="Chip">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_chip_selector</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ChipFull" parent="Chip">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>