<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Seleccionada: pill azul oscuro -->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="#2563EB" />
            <padding
                android:left="16dp"
                android:top="6dp"
                android:right="16dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <!-- No seleccionada: transparente (solo se ve el contenedor gris) -->
    <item>
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="@android:color/transparent" />
            <padding
                android:left="16dp"
                android:top="6dp"
                android:right="16dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>
