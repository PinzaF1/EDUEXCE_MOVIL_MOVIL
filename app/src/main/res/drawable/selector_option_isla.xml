<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Seleccionado: fondo verde claro -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5E9"/>
            <stroke android:width="2dp" android:color="#22C55E"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Presionado (feedback tÃ¡ctil) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5E9"/>
            <stroke android:width="2dp" android:color="#22C55E"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Por defecto: borde gris, fondo blanco -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="#E5E7EB"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>

