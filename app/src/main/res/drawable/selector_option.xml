<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Seleccionado: fondo gris claro -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#F3F4F6"/>
            <stroke android:width="2dp" android:color="#6B7280"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Presionado (feedback tÃ¡ctil): fondo gris claro -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F3F4F6"/>
            <stroke android:width="2dp" android:color="#6B7280"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Por defecto: borde gris, fondo transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/>
            <stroke android:width="1dp" android:color="@color/quizStroke"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
