<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDialog"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Icono circular con fondo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_icono_circular"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:gravity="center">
            
            <ImageView
                android:id="@+id/ivIconoVida"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart_filled"/>
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Sistema de Vidas!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp"/>

        <!-- Mensaje explicativo -->
        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A partir del Nivel 2, tendrás 3 intentos (vidas) para pasar al siguiente nivel.\n\nSi pierdes los 3 intentos, retrocederás un nivel y recuperarás tus 3 vidas.\n\nSi pasas al siguiente nivel, comenzarás con 3 vidas nuevas."
            android:textSize="13sp"
            android:textColor="#4B5563"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="16dp"/>

        <!-- Sección de vidas - diseño mejorado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="#F9FAFB"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tus vidas:"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/llCorazones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Botón Entendido - diseño mejorado -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEntendido"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Entendido"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:elevation="2dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
