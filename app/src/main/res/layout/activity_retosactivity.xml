<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_page">

        <!-- Sección Métricas (solo 2) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_orange_pink"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Victorias -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvVictorias"
                    style="@style/MetricNumber"
                    android:text="0" />

                <TextView
                    style="@style/MetricLabel"
                    android:layout_marginStart="4dp"
                    android:text="Victorias"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Ícono Espadas -->
            <ImageView
                android:id="@+id/iconSwords"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="12dp"
                android:src="@drawable/espadaa" />

            <!-- Derrotas -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDerrotas"
                    style="@style/MetricNumber"
                    android:text="0" />

                <TextView
                    style="@style/MetricLabel"
                    android:layout_marginStart="4dp"
                    android:text="Derrotas"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <!-- TabLayout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/text_primary"
            app:tabSelectedTextColor="@color/brand_orange"
            app:tabIndicatorColor="@color/brand_orange"
            app:tabIndicatorHeight="3dp"
            android:layout_marginHorizontal="12dp" />

        <!-- ViewPager -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Overlay Quiz / Resultados -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
