<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp">

        <!-- Avatar + punto verde -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="14dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="#EEF1F5"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Circular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Punto verde dentro del avatar -->
            <View
                android:id="@+id/statusDot"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_status_dot_green"
                app:layout_constraintBottom_toBottomOf="@id/icon"
                app:layout_constraintEnd_toEndOf="@id/icon"
                android:translationX="-8dp"
                android:translationY="-8dp"
                android:elevation="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Card: Información Personal (dos columnas) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="14dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="2dp"
            app:strokeColor="#2196F3"
            android:background="#F8F6FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp">

                <!-- Cabecera -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Información Personal"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/rowEditarPerfil"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Editar Perfil"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_edit"
                        app:iconSize="16dp"
                        app:iconPadding="6dp" />
                </LinearLayout>

                <!-- GRID 2 COLUMNAS -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowOrderPreserved="false">

                    <!-- Institución -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Institución"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvInstitucion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Nombre -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Documento -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Documento"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvDocumento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <!-- Tipo de Documento -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Documento"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvTipoDoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Grado -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grado"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvGrado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Curso -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Curso"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvCurso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Jornada -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jornada"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvJornada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Correo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correo"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="email"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="-"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Teléfono -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teléfono"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="phone"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Dirección -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:minHeight="72dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/tvDireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                </GridLayout>


                <!-- Fila clickeable: Estilo de aprendizaje -->
                <LinearLayout
                    android:id="@+id/rowKolbTrigger"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estilo de aprendizaje"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <ImageView
                        android:id="@+id/ivKolbChevron"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

                <!-- Campos ocultos para tu lógica -->
                <LinearLayout
                    android:id="@+id/kolbHiddenFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView android:id="@+id/tvEstilo"           android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textSize="15sp" android:textColor="@color/text_primary"/>
                    <TextView android:id="@+id/tvFechaKolb"        android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textSize="15sp" android:textColor="@color/text_primary"/>
                    <TextView android:id="@+id/tvCaracteristicas"  android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textSize="15sp" android:textColor="@color/text_primary"/>
                    <TextView android:id="@+id/tvRecomendaciones"  android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:textSize="15sp" android:textColor="@color/text_primary"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
