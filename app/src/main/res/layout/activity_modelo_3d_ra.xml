<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F9FF"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/llContenidoRA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <!-- HorizontalScrollView transparente con las tarjetas de videos educativos -->

        <!-- Subtítulo para juegos en RA -->
        <HorizontalScrollView
            android:id="@+id/hsVideosRA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fadeScrollbars="false"
            android:overScrollMode="never"
            android:paddingTop="20dp"
            android:paddingBottom="28dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llTarjetasVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="horizontal"
                android:padding="16dp"
                android:paddingTop="8dp">

                <!-- Tarjeta Matemáticas -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardVideoMatematicas"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minHeight="260dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/area_matematicas"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:contentDescription="Video Matemáticas"
                            android:scaleType="fitCenter"
                            android:src="@drawable/videomatematicas"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Rounded12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Matemáticas"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="Explora la lógica y resolución de problemas matemáticos de forma interactiva"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVideoMatematicas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/area_matematicas_pastel"
                            android:text="Clic"
                            android:textColor="@color/area_matematicas"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta Lectura -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minHeight="260dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/area_lenguaje"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:contentDescription="Video Lectura"
                            android:scaleType="fitCenter"
                            android:src="@drawable/videolectura"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Rounded12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Lectura"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="Mejora tu comprensión lectora y análisis de textos de manera dinámica"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVideoLectura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/area_lenguaje_pastel"
                            android:text="Clic"
                            android:textColor="@color/area_lenguaje"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta Inglés -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minHeight="260dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/area_ingles"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="277dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:contentDescription="Video Inglés"
                            android:scaleType="fitCenter"
                            android:src="@drawable/videoingles"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Rounded12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Inglés"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="Aprende vocabulario y gramática inglesa con experiencias inmersivas"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVideoIngles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/area_ingles_pastel"
                            android:text="Clic"
                            android:textColor="@color/area_ingles"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta Sociales -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minHeight="260dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/area_sociales"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:contentDescription="Video Sociales"
                            android:scaleType="fitCenter"
                            android:src="@drawable/videosociales"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Rounded12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Sociales"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="Conoce la historia, geografía y sociedad a través de recursos visuales"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVideoSociales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/area_sociales_pastel"
                            android:text="Clic"
                            android:textColor="@color/area_sociales"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta Ciencias -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:minHeight="260dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/area_ciencias"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:contentDescription="Video Ciencias"
                            android:scaleType="fitCenter"
                            android:src="@drawable/videociencias"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Rounded12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Ciencias"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="Investiga fenómenos naturales y experimentos científicos de forma práctica"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVideoCiencias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/area_ciencias_pastel"
                            android:text="Clic"
                            android:textColor="@color/area_ciencias"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvSubtituloJuegosRA"
            android:layout_width="471dp"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="¡Juegos en Realidad Aumentada para divertirte!"
            android:textColor="#111827"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Dos cards de juegos RA (Doty y Bailarina), lado a lado sin scroll -->
        <LinearLayout
            android:id="@+id/llJuegosRA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Card Doty -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:minHeight="200dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:contentDescription="Juego RA Doty"
                        android:scaleType="fitCenter"
                        android:src="@drawable/doty"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Rounded12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Doty: recoge monedas"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Ayuda a Doty a recoger monedas en RA y explora el escenario."
                        android:textColor="#4B5563"
                        android:textSize="11sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Bailarina -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBailarina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:minHeight="200dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:contentDescription="Juego RA Bailarina"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bailarina"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_Rounded12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Bailarina: cambia de animación"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Mira cómo la bailarina cambia de animación y tamaño en RA."
                        android:textColor="#4B5563"
                        android:textSize="11sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <com.example.zavira_movil.ui.WaveHeaderView
        android:layout_width="match_parent"
        android:layout_height="194dp" />
    
    <!-- Flecha blanca de retroceso -->
    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_arrow_back_white"
        android:contentDescription="Volver"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp" />
    
    <!-- Texto centrado en la parte azul -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="top"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Realidad Aumentada (RA)"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Contenedor vertical para videos + juegos (debajo del header) -->

</FrameLayout>
