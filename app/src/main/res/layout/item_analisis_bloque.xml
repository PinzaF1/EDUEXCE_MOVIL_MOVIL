<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:background="@drawable/bg_analisis_card"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView android:id="@+id/tvTitulo"
        android:textStyle="bold" android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvBullets"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
