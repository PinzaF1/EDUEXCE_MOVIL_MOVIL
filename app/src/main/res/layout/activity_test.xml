<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- ScrollView único para toda la pantalla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Indicador de progreso simplificado: solo números -->
            <LinearLayout
                android:id="@+id/progressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp">

                <!-- Número 1 con círculo -->
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/circle1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_progress_circle_inactive" />

                    <TextView
                        android:id="@+id/number1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Línea 1 -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:layout_marginHorizontal="8dp" />

                <!-- Número 2 con círculo -->
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/circle2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_progress_circle_inactive" />

                    <TextView
                        android:id="@+id/number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Línea 2 -->
                <View
                    android:id="@+id/line2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:layout_marginHorizontal="8dp" />

                <!-- Número 3 con círculo -->
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/circle3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_progress_circle_inactive" />

                    <TextView
                        android:id="@+id/number3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Línea 3 -->
                <View
                    android:id="@+id/line3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:layout_marginHorizontal="8dp" />

                <!-- Número 4 con círculo -->
                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/circle4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_progress_circle_inactive" />

                    <TextView
                        android:id="@+id/number4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>

            <!-- Título del bloque actual -->
            <TextView
                android:id="@+id/tvTituloBloqueActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experiencia Concreta"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryyy"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Contenedor dinámico para preguntas -->
            <LinearLayout
                android:id="@+id/questionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Botón principal -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="8dp"
                android:backgroundTint="#2563EB"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
