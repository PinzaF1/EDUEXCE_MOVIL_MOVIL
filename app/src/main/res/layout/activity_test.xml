<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test de Estilos de Aprendizaje"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/primaryyy"
        android:layout_marginBottom="12dp"
        android:letterSpacing="0.02" />

    <!-- CARD: Bloque y barra de progreso -->
    <LinearLayout
        android:id="@+id/cardBloque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:elevation="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:animation="@anim/fade_down">

        <!-- Nombre del bloque -->
        <TextView
            android:id="@+id/tvTituloBloque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observaci칩n Reflexiva"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryyy"
            android:layout_marginBottom="6dp" />

        <!-- Texto de progreso (nuevo ID para tu c칩digo) -->
        <TextView
            android:id="@+id/tvProgresoBloque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progreso: 0 / 36"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Barra de progreso -->
        <ProgressBar
            android:id="@+id/progressBloque"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="9"
            android:progress="2"
            android:progressTint="@color/primaryyy"
            android:backgroundTint="#E0E0E0"
            android:scaleY="1.4"/>
    </LinearLayout>

    <!-- Contenedor din치mico para preguntas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/questionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Bot칩n principal -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar respuestas"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:cornerRadius="25dp"
        android:backgroundTint="@color/primaryyy"
        android:textColor="@android:color/white"
        app:icon="@android:drawable/ic_media_next"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        android:animation="@anim/fade_up_slow" />

</LinearLayout>
