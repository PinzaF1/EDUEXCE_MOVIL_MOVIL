<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Fila principal: materia (texto) + flecha (único click habilitado) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvMateria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Matemáticas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:clickable="false"
            android:focusable="false" />

        <!-- Flecha (vector) → ÚNICA acción de navegación -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFlecha"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="Ver detalle"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_chevron_right_24"
            android:tint="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Nivel (solo display) -->
    <TextView
        android:id="@+id/tvNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Básico"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="6dp" />

    <!-- Fecha (solo display) -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07/10/2025"
        android:textColor="@color/text_secondary" />

</LinearLayout>
