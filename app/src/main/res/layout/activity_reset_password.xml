<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Header con botón atrás -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Recuperar Contraseña"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Card contenedor principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="24dp"
            android:layout_marginTop="16dp">

            <!-- ViewFlipper para los 3 pasos -->
            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- ============================================ -->
                <!-- PASO 1: Solicitar código -->
                <!-- ============================================ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Icono -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_lock_24"
                        android:tint="#2979FF"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="Lock icon" />

                    <!-- Título -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Olvidaste tu contraseña?"
                        android:textColor="#212121"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresa tu correo electrónico y te enviaremos un código de verificación de 6 dígitos."
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginBottom="24dp" />

                    <!-- Campo Correo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Correo Electrónico"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ejemplo@correo.com"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:textColorHint="#999999"
                        android:layout_marginBottom="24dp" />

                    <!-- Botón Enviar Código -->
                    <Button
                        android:id="@+id/btnEnviarCodigo"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Enviar Código"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2979FF"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Botón de atajo para ver siguiente paso -->
                    <Button
                        android:id="@+id/btnSkipStep1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚡ Ver Paso 2 (Atajo)"
                        android:textColor="#FF9800"
                        android:backgroundTint="#FFF3E0"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressStep1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- ============================================ -->
                <!-- PASO 2: Verificar código -->
                <!-- ============================================ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Icono -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="#2979FF"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="Check icon" />

                    <!-- Título -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verifica tu código"
                        android:textColor="#212121"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Descripción -->
                    <TextView
                        android:id="@+id/tvEmailEnviado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hemos enviado un código de 6 dígitos a tu correo electrónico."
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Timer de expiración -->
                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiempo restante: 15:00"
                        android:textColor="#FF9800"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="24dp" />

                    <!-- Campo Código -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Código de Verificación"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etCodigo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingresa el código de 6 dígitos"
                        android:inputType="number"
                        android:maxLength="6"
                        android:background="@drawable/rounded_edittext"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:textColorHint="#999999"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:letterSpacing="0.2"
                        android:layout_marginBottom="16dp" />

                    <!-- Reenviar código -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¿No recibiste el código? "
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvReenviarCodigo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reenviar"
                            android:textColor="#2979FF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="4dp" />
                    </LinearLayout>

                    <!-- Botón Verificar -->
                    <Button
                        android:id="@+id/btnVerificarCodigo"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Verificar Código"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2979FF"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Botón de atajo para ver siguiente paso -->
                    <Button
                        android:id="@+id/btnSkipStep2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚡ Ver Paso 3 (Atajo)"
                        android:textColor="#FF9800"
                        android:backgroundTint="#FFF3E0"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressStep2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- ============================================ -->
                <!-- PASO 3: Nueva contraseña -->
                <!-- ============================================ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Icono -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_check"
                        android:tint="#4CAF50"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="Success icon" />

                    <!-- Título -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nueva Contraseña"
                        android:textColor="#212121"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresa tu nueva contraseña. Debe tener al menos 6 caracteres."
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginBottom="24dp" />

                    <!-- Campo Nueva Contraseña -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nueva Contraseña"
                        app:endIconMode="password_toggle"
                        app:boxStrokeColor="#2979FF"
                        app:hintTextColor="#2979FF">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNuevaPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#212121" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Confirmar Contraseña -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Confirmar Contraseña"
                        app:endIconMode="password_toggle"
                        app:boxStrokeColor="#2979FF"
                        app:hintTextColor="#2979FF">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etConfirmarPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#212121" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Restablecer -->
                    <Button
                        android:id="@+id/btnRestablecerPassword"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Restablecer Contraseña"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#4CAF50"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="24dp" />

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressStep3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />

                </LinearLayout>

            </ViewFlipper>

        </LinearLayout>

        <!-- Indicador de pasos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <View
                android:id="@+id/indicatorStep1"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#2979FF"
                android:layout_marginEnd="8dp" />

            <View
                android:id="@+id/indicatorStep2"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#E0E0E0"
                android:layout_marginEnd="8dp" />

            <View
                android:id="@+id/indicatorStep3"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="#E0E0E0" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
