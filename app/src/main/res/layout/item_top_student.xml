<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_top_row_blue"
    android:padding="14dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <!-- # de puesto -->
    <TextView
        android:id="@+id/tvRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1"
        android:textStyle="bold"
        android:textColor="#0F172A"
        android:textSize="16sp"
        android:layout_marginEnd="12dp"/>

    <!-- Nombre (izquierda) + puntos (derecha) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Apellido"
            android:textColor="#0F172A"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvPointsSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 pts"
            android:textColor="#334155"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Puntos grande, opcional (puedes quitarlo si no lo quieres) -->
    <TextView
        android:id="@+id/tvPointsRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#0F172A"
        android:textStyle="bold"
        android:textSize="16sp"/>
</LinearLayout>
