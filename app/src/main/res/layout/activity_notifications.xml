<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Atrás"
            android:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificaciones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/notificationsContainer"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Sección 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Últimos 7 días"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#374151"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <!-- Ejemplo de notificación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_user_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle_gray"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07carlosc y 281 cuentas más te siguen, pero tú no las sigues a ellas."
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 d"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Otra sección -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Últimos 30 días"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#374151"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Ejemplo con botón -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_user_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle_gray"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="si_jhoam comenzó a seguirte."
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 sem"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:text="Seguir también"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#1D4ED8"
                    android:paddingHorizontal="12dp"
                    android:minWidth="0dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
