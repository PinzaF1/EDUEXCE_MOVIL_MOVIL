<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:padding="25dp">

        <!-- Header icon + títulos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/iconoeduexce"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Diagnóstico"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primaryyy"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Académico"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/primaryyy"
                android:layout_marginTop="2dp"/>

            <View
                android:layout_width="44dp"
                android:layout_height="3dp"
                android:background="#6A64FE"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:alpha="0.9"/>
        </LinearLayout>

        <!-- Card: descripción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acad_card_white"
            android:padding="16dp"
            android:orientation="vertical"
            android:elevation="6dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluación de Nivel Académico"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="#151515"
                android:paddingBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A continuación, realizarás un test académico diseñado para evaluar tu nivel de desempeño actual. Este test medirá tu comprensión en diferentes áreas educativas y, al finalizar, recibirás un porcentaje que reflejará tus resultados en cada una de ellas."
                android:textColor="#555D6D"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- ===== Lista de áreas (5 ítems) ===== -->
        <!-- Item helper: cada bloque es idéntico, cambian icono/título -->
        <!-- Matemáticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acad_item_soft"
            android:padding="14dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:elevation="2dp">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/calculator"
                android:gravity="center">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Matemáticas" android:textStyle="bold" android:textColor="#1B1B1B" android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Lenguaje -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acad_item_soft"
            android:padding="14dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:elevation="2dp">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lectu"
                android:gravity="center">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">
                <TextView android:text="Lenguaje" android:textStyle="bold" android:textColor="#1B1B1B" android:textSize="15sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Ciencias Naturales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acad_item_soft"
            android:padding="14dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:elevation="2dp">
            <LinearLayout android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/naturales" android:gravity="center">
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginLeft="12dp">
                <TextView android:text="Ciencias Naturales" android:textStyle="bold" android:textColor="#1B1B1B" android:textSize="15sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Ciencias Sociales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acad_item_soft"
            android:padding="14dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:elevation="2dp">
            <LinearLayout android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/sociale" android:gravity="center">
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginLeft="12dp">
                <TextView android:text="Ciencias Sociales" android:textStyle="bold" android:textColor="#1B1B1B" android:textSize="15sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Inglés -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acad_item_soft"
            android:padding="14dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">
            <LinearLayout android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/ingles" android:gravity="center">
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginLeft="12dp">
                <TextView android:text="Inglés" android:textStyle="bold" android:textColor="#1B1B1B" android:textSize="15sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
+}


























            mn
            </LinearLayout>

        </LinearLayout>

        <!-- Estadísticas (3 columnas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp">

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <TextView android:text="25" android:textStyle="bold" android:textColor="#3C7BFF" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Total preguntas" android:textColor="#7A8798" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <TextView android:text="100%" android:textStyle="bold" android:textColor="#00A676" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Obligatorio" android:textColor="#7A8798" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Aviso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acad_warning_bg"
            android:padding="14dp"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:layout_marginBottom="14dp">

            <TextView android:text="⚠️" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp"/>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                <TextView android:text="Importante" android:textStyle="bold" android:textColor="#151515" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:text="Esta evaluación es obligatoria para acceder a la plataforma." android:textColor="#6D6D6D" android:textSize="13sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Botón principal -->
        <Button
            android:id="@+id/btnStartTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comenzar Test"
            android:textStyle="bold"
            android:backgroundTint="@color/primaryyy"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="36dp"
            android:elevation="6dp"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
