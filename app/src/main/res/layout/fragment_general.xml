<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_surface"
    android:scrollbars="vertical"
    android:fitsSystemWindows="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="160dp">

        <!-- CARD: Progreso Global (igual que tenías) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/card_surface"
            app:strokeWidth="2dp"
            app:strokeColor="#2563EB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso Global"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progresoGeneral"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        app:indicatorSize="200dp"
                        app:trackThickness="28dp"
                        app:indicatorInset="0dp"
                        app:indicatorDirectionCircular="clockwise"
                        app:indicatorColor="@color/progress_primary"
                        app:trackColor="@color/progress_track" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textoProgreso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textStyle="bold"
                            android:textSize="26sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completado"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted"/>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel actual"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tvNivelActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermedio"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/level_intermediate"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Título "Materias" (sin card contenedor) -->
        <TextView
            android:id="@+id/tvTituloMateriasResumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp"
            android:text="Materias"
            android:textColor="@color/text_primary"
            android:textSize="19sp"
            android:textStyle="bold" />

        <!-- Lista a ancho completo; cada ítem ya tiene sus propios márgenes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerNiveles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
