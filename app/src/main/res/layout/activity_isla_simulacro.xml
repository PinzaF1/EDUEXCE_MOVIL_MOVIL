<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card: cabecera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            android:clipToOutline="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvTituloPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="#7C3AED" />

            <TextView
                android:id="@+id/tvSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntuación Global"
                android:layout_marginTop="6dp"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Card: resultados por área -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultados por Área"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/contAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Sugerencia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginTop="12dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Sigue mejorando!"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Este es un buen punto de partida. Enfócate en las áreas con menor puntuación y practica regularmente."
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Botón Finalizar (azul) -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Finalizar"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#1E88E5" />
    </LinearLayout>
</ScrollView>
