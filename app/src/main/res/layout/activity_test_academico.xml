<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Diagnóstico"
            android:textColor="@color/primaryyy"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- PROGRESS BAR CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:padding="12dp"
        android:elevation="6dp"
        android:layout_marginBottom="12dp">

        <ProgressBar
            android:id="@+id/progressBloque"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/primaryyy"
            android:backgroundTint="#E0E0E0"
            android:scaleY="1.5" />
    </LinearLayout>

    <!-- CARD PREGUNTAS -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        android:padding="16dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBloque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matemáticas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:textColor="@color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPreguntas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- BOTÓN SIGUIENTE -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/primaryyy"
        android:textColor="@android:color/white"
        app:cornerRadius="25dp"
        app:iconTint="@android:color/white"
        app:iconPadding="8dp"
        app:rippleColor="@color/primaryyy" />

</LinearLayout>
