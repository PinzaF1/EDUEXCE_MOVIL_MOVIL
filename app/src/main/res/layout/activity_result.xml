<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="¡Resultados Listos!"
            android:textColor="@color/primaryyy"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Subtítulo -->

        <!-- Sección: Información del Estudiante -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- Icono de información -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person_blue"
                android:contentDescription="Icono información" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Información del Estudiante"
                android:textStyle="bold"
                android:textColor="@color/primaryyy"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Nombre y Fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="32dp">

            <TextView
                android:id="@+id/tvNombreCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: —"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: —"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Icono del cerebro centrado -->

        <!-- Título: Tu Estilo de Aprendizaje -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu Estilo de Aprendizaje"
            android:textStyle="bold"
            android:textColor="@color/primaryyy"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Estilo identificado con icono -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEstilo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Icono estilo" />

            <TextView
                android:id="@+id/tvEstilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#36C59D"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Descripción del estilo -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="—"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Sección: Características -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:contentDescription="Icono estrella" />

            <TextView
                android:id="@+id/tvTituloCaracteristicas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Características del Estilo"
                android:textStyle="bold"
                android:textColor="@color/primaryyy"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Lista de características -->
        <LinearLayout
            android:id="@+id/llCaracteristicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp" />

        <!-- Sección: Recomendaciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lightbulb"
                android:contentDescription="Icono bombilla" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Recomendaciones de Estudio"
                android:textStyle="bold"
                android:textColor="@color/primaryyy"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Lista de recomendaciones -->
        <LinearLayout
            android:id="@+id/llRecomendaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp" />

        <!-- Botón -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIrHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ir al inicio"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:padding="14dp"
            app:cornerRadius="8dp"
            app:backgroundTint="#2563EB" />
    </LinearLayout>
</ScrollView>
