<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 / 25"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:60"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2563EB"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Progreso -->
        <ProgressBar
            android:id="@+id/progressBloque"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="25"
            android:progress="0"
            android:progressTint="#2563EB"
            android:backgroundTint="#E0E0E0"
            android:scaleY="1.4"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvProgresoBloque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progreso: 0 / 25"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matemáticas • Subtema"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111827"
            android:layout_marginTop="16dp" />

        <!-- Enunciado -->
        <TextView
            android:id="@+id/tvEnunciado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí va el enunciado…"
            android:textSize="18sp"
            android:textColor="#111827"
            android:layout_marginTop="12dp" />

        <!-- Opciones (texto SIEMPRE negro, fondo azul al seleccionar/presionar) -->
        <Button
            android:id="@+id/btnOp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="16dp"
            android:text="A. Opción 1"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#000000"
            android:singleLine="false"
            android:maxLines="4"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@drawable/selector_option"
            android:backgroundTint="@android:color/transparent" />

        <Button
            android:id="@+id/btnOp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="12dp"
            android:text="B. Opción 2"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#000000"
            android:singleLine="false"
            android:maxLines="4"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@drawable/selector_option"
            android:backgroundTint="@android:color/transparent" />

        <Button
            android:id="@+id/btnOp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="12dp"
            android:text="C. Opción 3"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#000000"
            android:singleLine="false"
            android:maxLines="4"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@drawable/selector_option"
            android:backgroundTint="@android:color/transparent" />

        <Button
            android:id="@+id/btnOp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="12dp"
            android:text="D. Opción 4"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#000000"
            android:singleLine="false"
            android:maxLines="4"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@drawable/selector_option"
            android:backgroundTint="@android:color/transparent" />

        <!-- Botón Responder (AZUL) -->
        <Button
            android:id="@+id/btnResponder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="14dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"
            android:text="Responder"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/bg_cta_blue"
            android:backgroundTint="@android:color/transparent" />
    </LinearLayout>
</ScrollView>
