<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tarjeta principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            android:clipToPadding="false"
            android:clipToOutline="false">

            <!-- Trofeo (solo visible si ganó) -->
            <ImageView
                android:id="@+id/ivTrophyGif"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:contentDescription="Trofeo" />

            <TextView
                android:id="@+id/tvTituloPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Simulacro Completado!"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#1E1B4B" />

            <TextView
                android:id="@+id/tvSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Puntuación Global"
                android:textSize="14sp"
                android:textColor="#666666" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#22000000" />

            <TextView
                android:id="@+id/tvPorcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="0%"
                android:textColor="#957DAD"
                android:textStyle="bold"
                android:textSize="56sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Puntuación Global"
                android:textColor="#666666"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Resultados por Área -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:clipToOutline="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultados por Área"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1E1B4B" />

            <LinearLayout
                android:id="@+id/contAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Tarjeta consejo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Sigue mejorando!"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1E1B4B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Este es un buen punto de partida. Enfócate en las áreas con menor puntuación y practica regularmente."
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Botones -->
        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Finalizar"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#957DAD" />

        <Button
            android:id="@+id/btnRepetir"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:text="Repetir Simulacro"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#222222"
            android:textSize="16sp"
            android:backgroundTint="#E5E7EB" />

    </LinearLayout>
</ScrollView>
