<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabecera centrada -->
        <LinearLayout
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Ranking y Logros"
                    android:textColor="#1F2937"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Compite, aprende y consigue insignias"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tabs + Indicador -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tabRanking"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ranking"
                    android:textStyle="bold"
                    android:background="@drawable/tab_bg_selector"
                    android:textColor="@color/black"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tabLogros"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Logros"
                    android:textStyle="bold"
                    android:background="@drawable/tab_bg_selector"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <View
                android:id="@+id/tabIndicator"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:background="#2563EB"/>
        </FrameLayout>

        <!-- Vista Ranking -->
        <LinearLayout
            android:id="@+id/viewRanking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tu PosiciÃ³n (PRIMERO) -->
            <LinearLayout
                android:id="@+id/cardActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â—Ž  Tu PosiciÃ³n Actual"
                    android:textColor="#1F2937"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp">

                    <!-- FOTO (opcional) -->
                    <ImageView
                        android:id="@+id/ivUserPhoto"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:visibility="gone" />

                    <!-- Iniciales (fallback) -->
                    <TextView
                        android:id="@+id/tvUserInitials"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:background="@drawable/azul"
                        android:text="JP"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estudiante"
                            android:textColor="#1F2937"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvUserRank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puesto #â€” en el ranking general"
                            android:textColor="#070707"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvUserPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#0C0C0D"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  puntos"
                        android:textColor="#070707"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- TÃ­tulo Top 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top 5 Mejores Estudiantes"
                android:layout_marginTop="16dp"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Lista Top 5 (DESPUÃ‰S) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/posiciones"
                android:padding="4dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTop"
                    android:layout_width="match_parent"
                    android:layout_height="478dp"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </LinearLayout>


        <!-- Vista Logros -->
        <LinearLayout
            android:id="@+id/viewLogros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ…  ColecciÃ³n de Insignias"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1F2937"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="500dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>